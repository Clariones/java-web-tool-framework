<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	
	<bean id="organization" class="organization.OrganizationSerivce"></bean>
	
	<bean id="tool" class="test.ServiceBeanTest"></bean>
	<bean id="finance" class="test.FinacialService"></bean>
	<bean id="navi" class="com.terapico.caf.NavigationService"></bean>
	<bean id="auth" class="com.terapico.caf.AuthencationService"></bean>
	
	<bean id="privilege" class="privilege.PrivilegeService">
		<property name="userDAO" ref="userDAO" />
	</bean>
	<bean id="userDAO" class="privilege.UserDAOJDBCTemplateImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="order" class="com.terapico.b2btemplate.OrderDAOImpl">
		<property name="dataSource" ref="b2bDataSource" />
	</bean>
	
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url"	value="jdbc:mysql://localhost:3306/privilege?characterEncoding=utf8" />
		<property name="username" value="root" />
		<property name="password" value="3123" />
	</bean>




	<bean id="b2bDataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url"	value="jdbc:mysql://localhost:3306/b2b?characterEncoding=utf8" />
		<property name="username" value="root" />
		<property name="password" value="3123" />
		<property name="initialSize" value="3"/>
	</bean>

</beans>

